@model AdminGenresViewModel

<h1>Admin Genre List</h1>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width:30px;">#</th>
            <th>Name</th>
            <th style="width:70px;">Count</th>
            <th style="width:160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.Genres)
        {
            <tr>
                <td>@genre.GenreID</td>
                <td>@genre.GenreName</td>
                <td>@genre.Count</td>
                <td>
                    <a asp-controller="Admin" asp-action="GenreUpdate" asp-route-id="@genre.GenreID" class="btn btn-warning btn-sm">Update</a>
                    <form asp-controller="Admin" asp-action="GenreDelete" method="post" style="display:inline;">
                        <input type="hidden" name="genreid" value="@genre.GenreID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>