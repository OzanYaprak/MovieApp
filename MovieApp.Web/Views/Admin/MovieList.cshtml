@model AdminMoviesViewModel

<h1>Admin Movie List</h1>

<table class="table table-striped table-hover table-border">
    <thead>
        <tr>
            <th style="width:30px">#</th>
            <th style="width:100px">Image</th>
            <th>Title</th>
            <th style="width:70px">Genres</th>
            <th style="width:160px">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.MovieID</td>
                <td><img src="~/img/@movie.ImageURL" width="80px" /></td>
                <td>@movie.Title</td>
                <td>
                    <ul>
                        @foreach (var genre in movie.Genres)
                        {
                            <li>@genre.GenreName</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="MovieUpdate" asp-route-id="@movie.MovieID" class="btn btn-primary btn-sm">Update</a>

                    <form asp-controller="Admin" asp-action="MovieDelete" method="post" style="display:inline;">
                        <input type="hidden" name="movieid" value="@movie.MovieID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
